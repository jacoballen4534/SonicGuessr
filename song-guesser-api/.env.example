// Description: Example environment variables. Copy this to .env and fill in your actual credentials.
// IMPORTANT: Add .env to your .gitignore file to keep your credentials secret!

SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET

GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_FOR_SIGN_IN
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_FOR_SIGN_IN
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback // Adjust if your port or path differs

